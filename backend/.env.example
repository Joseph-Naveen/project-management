# Example Environment Configuration
# Copy this file to .env and update the values for your local development

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (Local PostgreSQL)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=project_management
DB_USER=user
DB_PASSWORD=user
DB_DIALECT=postgres
ADMIN_PASSWORD=password123

# JWT Configuration (Generate new secrets for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Email Configuration (Optional for local development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@projectmanagement.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (Local frontend)
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
