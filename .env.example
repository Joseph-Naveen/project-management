# Environment Variables Example
# Copy this file to .env and update the values according to your setup

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://username:password@hostname:port/database_name
# For local development:
# DATABASE_URL=postgresql://user:user@localhost:5432/project_management

# ========================================
# JWT Configuration
# ========================================
# Generate secure random strings for these values
JWT_SECRET=your-super-secure-jwt-secret-key-here-min-32-chars
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-min-32-chars

# ========================================
# Server Configuration
# ========================================
NODE_ENV=development
PORT=5000

# ========================================
# CORS Configuration
# ========================================
# For local development
CORS_ORIGIN=http://localhost:5173
# For production, update with your frontend URL

# ========================================
# Security Configuration
# ========================================
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# Logging
# ========================================
LOG_LEVEL=info

# ========================================
# Optional: Redis Configuration (for caching)
# ========================================
# REDIS_URL=redis://localhost:6379

# ========================================
# Optional: Email Configuration (for notifications)
# ========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@projectmanagement.com

# ========================================
# Frontend Configuration
# ========================================
# For frontend .env file, create:
# VITE_API_URL=http://localhost:5000
# VITE_APP_NAME=Project Management Dashboard
# VITE_APP_VERSION=1.0.0
